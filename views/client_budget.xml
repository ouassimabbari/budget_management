<odoo>
    <data>
        <record id="budget_management.client_budget_tree" model="ir.ui.view">
            <field name="name">budget_management.client_budget.tree</field>
            <field name="model">budget_management.client_budget</field>
            <field name="arch" type="xml">
                <tree string="Budgets client">
                    <field name="initialAmountInMad"/>
                    <field name="initialAmountInEuros"/>
                    <field name="amountLeftInMad"/>
                    <field name="amountLeftInEuros"/>
                    <field name="amountConsumedInMad"/>
                    <field name="amountConsumedInEuros"/>
                    <field name="created_at"/>
                </tree>
            </field>
        </record>

        <record id="budget_management.budget_form" model="ir.ui.view">
            <field name="name">budget_management.client_budget.form</field>
            <field name="model">budget_management.client_budget</field>
            <field name="arch" type="xml">
                <form string="Budget client">
                    <sheet>
                        <group>
                            <field name="initialAmountInMad"/>
                            <field name="config"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="budget_management.action_window_client_budgets">
            <field name="name">Budgets clients</field>
            <field name="res_model">budget_management.client_budget</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    CrÃ©ez votre premier budget client
                </p>
            </field>
        </record>


    <menuitem name="Budgets clients" id="budget_management.budgets_client" parent="budget_management.menu_root" action="budget_management.action_window_client_budgets"/>
    </data>
</odoo>