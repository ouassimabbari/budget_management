<odoo>
    <data>
        <record id="budget_management.sub_budget_tree" model="ir.ui.view">
            <field name="name">budget_management.sub_budget.tree</field>
            <field name="model">budget_management.sub_budget</field>
            <field name="arch" type="xml">
                <tree string="Sous Budgets">
                    <field name="name" />
                    <field name="initial_Amount"/>
                    <field name="amount_Left"/>
                    <field name="amount_Consumed"/>
                </tree>
            </field>
        </record>

        <record id="budget_management.sub_budget_form" model="ir.ui.view">
            <field name="name">budget_management.sub_budget.form</field>
            <field name="model">budget_management.sub_budget</field>
            <field name="arch" type="xml">
                <form string="Sous Budget">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="initial_Amount"/>
                            </group>
                            <group>
                                <field name="amount_Left"/>
                                <field name="amount_Consumed"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="budget_management.action_window_sub_budgets">
            <field name="name">Sous Budgets</field>
            <field name="res_model">budget_management.sub_budget</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    CrÃ©ez votre premier sous budget
                </p>
            </field>
        </record>


    <menuitem name="Sous Budgets" id="budget_management.sub_budgets" parent="budget_management.menu_root" action="budget_management.action_window_sub_budgets"/>
    </data>
</odoo>