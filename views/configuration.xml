<odoo>
    <data>
        <record id="budget_management.configuration_tree" model="ir.ui.view">
            <field name="name">budget_management.configuration.tree</field>
            <field name="model">budget_management.configuration</field>
            <field name="arch" type="xml">
                <tree string="Configuration">
                    <field name="configuration_name" />
                </tree>
            </field>
        </record>

        <record id="budget_management.configuration_form" model="ir.ui.view">
            <field name="name">budget_management.configuration.form</field>
            <field name="model">budget_management.configuration</field>
            <field name="arch" type="xml">
                <form string="Configuration">
                    <sheet>
                        <group>
                            <group>
                                <field name="configuration_name" />
                            </group>
                            <group>
                                <field name="sub_configurations"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="budget_management.action_window_configurations">
            <field name="name">Configurations</field>
            <field name="res_model">budget_management.configuration</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première Configuration
                </p>
            </field>
        </record>


    <menuitem name="Configuration" id="budget_management.configurations" parent="budget_management.menu_root" action="budget_management.action_window_configurations"/>
    </data>
</odoo>